@addTagHelper *, LazZiya.TagHelpers

@model Store.Application.Services.Products.Queries.GetProductsSite.ResultGetProductsSiteDto
@{
    ViewData["Title"] = "محصولات";
    Dictionary<string, string> routeuser= new Dictionary<string, string>
    {
        {"SearchKey",Context.Request.Query["SearchKey"]},
        {"page",Context.Request.Query["SearchKey"]},
        {"CategoryId",Context.Request.Query["SearchKey"]},
        {"pagesize",Context.Request.Query["SearchKey"]}
    };
}

<div class="col-lg-12 col-md-12 col-xs-12 pl">
    <div class="shop-archive-content mt-3 d-block">
        <div class="archive-header">
            <h2 class="archive-header-title">آرشیو محصولات</h2>
            <div class="sort-tabs mt-0 d-inline-block pr">
                <h4>مرتب&zwnj;سازی بر اساس :</h4>
            </div>
            <div class="nav-sort-tabs-res">
                <ul class="nav sort-tabs-options" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" href="~/product?SearchKey=@Context.Request.Query["SearchKey"]&page=@Context.Request.Query["page"]&CategoryId=@Context.Request.Query["CategoryId"]&pagesize=@Context.Request.Query["pagesize"]&order=MostVisited" role="tab" aria-controls="Most-visited" aria-selected="true">پربازدیدترین</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/product?SearchKey=@Context.Request.Query["SearchKey"]&page=@Context.Request.Query["page"]&CategoryId=@Context.Request.Query["CategoryId"]&pagesize=@Context.Request.Query["pagesize"]&order=MostSales" role="tab" aria-controls="Bestselling" aria-selected="false">پرفروش&zwnj;ترین&zwnj;</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/product?SearchKey=@Context.Request.Query["SearchKey"]&page=@Context.Request.Query["page"]&CategoryId=@Context.Request.Query["CategoryId"]&pagesize=@Context.Request.Query["pagesize"]&order=Popular" role="tab" aria-controls="Most-Popular" aria-selected="false">محبوب&zwnj;ترین</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/product?SearchKey=@Context.Request.Query["SearchKey"]&page=@Context.Request.Query["page"]&CategoryId=@Context.Request.Query["CategoryId"]&pagesize=@Context.Request.Query["pagesize"]&order=Newsest" role="tab" aria-controls="newest" aria-selected="false">جدیدترین</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/product?SearchKey=@Context.Request.Query["SearchKey"]&page=@Context.Request.Query["page"]&CategoryId=@Context.Request.Query["CategoryId"]&pagesize=@Context.Request.Query["pagesize"]&order=Cheaper" role="tab" aria-controls="cheapest" aria-selected="false">ارزان&zwnj;ترین</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/product?SearchKey=@Context.Request.Query["SearchKey"]&page=@Context.Request.Query["page"]&CategoryId=@Context.Request.Query["CategoryId"]&pagesize=@Context.Request.Query["pagesize"]&order=Expensive" role="tab" aria-controls="most-expensive" aria-selected="false">گران&zwnj;ترین</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="product-items">
            <div class="tab-content" id="myTabContent">




                <div class="tab-pane fade show active" id="Most-visited" role="tabpanel" aria-labelledby="Most-visited-tab">
                    <div class="row">
                        @foreach (var item in Model.Products)
                        {
                            <div class="col-lg-3 col-md-3 col-xs-12 order-1 d-block mb-3">
                                <section class="product-box product product-type-simple">
                                    <div class="thumb">
                                        <a href="~/product/detail/@item.ProductId" class="d-block">

                                            <div class="product-rate">

                                                @for (int i = 1; i <= item.Stars; i++)
                                                {
                                                    <i class="fa fa-star active"></i>
                                                }
                                                @for (int i = 1; i <= (5 - item.Stars); i++)
                                                {
                                                    <i class="fa fa-star"></i>
                                                }
                                            </div>
                                            <img src="~/@item.ImageSrc">
                                        </a>
                                    </div>
                                    <div class="title">
                                        <a href="~/product/detail/@item.ProductId">  @item.ProductTitle</a>
                                    </div>
                                    <div class="price">
                                        <span class="amount">
                                            @item.Price.ToString("n0")
                                            <span>تومان</span>
                                        </span>
                                    </div>
                                </section>
                            </div>
                        }
                    </div>
                </div>


            </div>
        </div>
