@model ResultDto<List<BannerSiteDto>>
@{
    Layout = null;
}

@if (Model.IsSuccess && Model.Data.Any())
{
    <div class="col-lg-8 col-xs-12 pr">
        <div class="slider-main-container d-block">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">

                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>

                    @for (int i = 1; i <= (Model.Data.Count() - 1); i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                    }
                </ol>
                <div class="carousel-inner">
                    @foreach (var item in Model.Data)
                    {

                        if (Model.Data.First() == item)
                        {
                            <div class="carousel-item active">
                                <a href="@item.Link">
                                    <img src="~/@item.ImgSrc" class="d-block w-100" alt="...">
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <a href="@item.Link">
                                    <img src="~/@item.ImgSrc" class="d-block w-100" alt="...">
                                </a>
                            </div>
                        }
                    }


                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="fa fa-angle-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="fa fa-angle-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
}
else
{
    <div class="col-lg-8 col-xs-12 pr">
        <div class="slider-main-container d-block">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <a asp-action="Index" asp-controller="Home">
                            <img src="~/sitetemplate/assets/images/slider-main/sm-1.jpg" class="d-block w-100" alt="DefaultSlider">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a asp-action="Index" asp-controller="Home">
                            <img src="~/sitetemplate/assets/images/slider-main/sm-2.jpg" class="d-block w-100" alt="DefaultSlider">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a asp-action="Index" asp-controller="Home">
                            <img src="~/sitetemplate/assets/images/slider-main/sm-5.jpg" class="d-block w-100" alt="DefaultSlider">
                        </a>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="fa fa-angle-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="fa fa-angle-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
}