@using Store.Application.Services.Users.Queries.GetUserDetail
@model UserDetailDto
@{
    ViewData["Title"] = "جزئیات کاربر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-body">

        <div class="d-flex flex-column align-items-center text-center">
            <img src="~/admintemplate/assets/images/avatars/guest.png" alt="Admin" class="rounded-circle p-1 bg-primary" width="110">
            <div class="mt-3">
                <h4>@Model.UserName</h4>
                <p class="text-secondary mb-1">نقش کاربر @Model.Role</p>
            </div>
        </div>
        <hr class="my-4">
        <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                <h6 class="mb-0"><i class="lni lni-cart-full"></i> تعداد محصولات خریداری شده</h6>
                <span class="text-secondary">@Model.BoughtCount عدد</span>
            </li>
            <li class=" list-group-item d-flex justify-content-between align-items-center flex-wrap">
                <h6 class="mb-0"><i class="lni lni-calculator"></i> هزینه پرداخت شده از کاربر </h6>
                <span class="text-secondary">@Model.TotalPaid.ToString("n0") تومان</span>
            </li>
        </ul>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-sm-3">
                <h6 class="mb-0">نام کامل</h6>
            </div>
            <div class="col-sm-9 text-secondary">
                <input type="text" class="form-control" value="@Model.UserName" disabled>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3">
                <h6 class="mb-0">ایمیل</h6>
            </div>
            <div class="col-sm-9 text-secondary">
                <input type="text" class="form-control" value="@Model.Email" disabled>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3">
                <h6 class="mb-0">شماره تماس</h6>
            </div>
            <div class="col-sm-9 text-secondary">
                <input type="text" class="form-control" value="@Model.PhoneNumber" disabled>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3">
                <h6 class="mb-0">کدپستی</h6>
            </div>
            <div class="col-sm-9 text-secondary">
                <input type="text" class="form-control" value="@Model.ZipCode" disabled>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3">
                <h6 class="mb-0">آدرس</h6>
            </div>
            <div class="col-sm-9 text-secondary">
                <input type="text" class="form-control" value="@Model.Address" disabled>
            </div>
        </div>

    </div>
</div>